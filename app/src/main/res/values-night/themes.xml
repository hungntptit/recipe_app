<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipe" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_orange_200</item>
        <item name="colorPrimaryVariant">@color/md_orange_700</item>
        <item name="colorOnPrimary">@color/md_grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_yellow_200</item>
        <item name="colorSecondaryVariant">@color/md_yellow_200</item>
        <item name="colorOnSecondary">@color/md_grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/md_orange_200</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="Theme.Recipe.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_orange_200</item>
        <item name="colorPrimaryVariant">@color/md_orange_700</item>
        <item name="colorOnPrimary">@color/md_grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_yellow_200</item>
        <item name="colorSecondaryVariant">@color/md_yellow_200</item>
        <item name="colorOnSecondary">@color/md_grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/md_orange_200</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>
</resources>